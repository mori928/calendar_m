<%= form_with(model: @yoyaku, local: true) do |form| %>

  <div class="title">
    <div class="form-tag">予約内容</div>
    <%= form.text_field :title %>
  </div>


  <div class="content">
    <div class="form-tag">内容</div>
    <%= form.text_field :content %>
  </div>

    <div class="time">
    <div class="form-tag">時間</div>
    <%= form.datetime_select :start_time %>
  </div>

<p>
  <strong>コメント</strong>
  <%= @yoyaku.start_time.strftime("%m-%d") %>
</p>


  <div class="submit">
    <%= form.submit %>
  </div>

<% end %>